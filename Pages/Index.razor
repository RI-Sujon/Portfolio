<!-- 3️⃣ Skills -->
<section id="skills" class="container py-5 section animate-fade-up delay-1">
    <h2 class="section-title">Skills</h2>
    <div class="row g-4">
        @foreach (var cat in Skills)
        {
            <div class="col-md-6">
                <div class="glass-card skill-card p-4 h-100">
                    <div class="skill-icon mb-3">
                        @if (cat.Key == "Languages")
                        {
                            <i class="bi bi-code-slash"></i>
                        }
                        else if (cat.Key == "Frameworks")
                        {
                            <i class="bi bi-layers"></i>
                        }
                        else if (cat.Key == "Databases")
                        {
                            <i class="bi bi-database"></i>
                        }
                        else
                        {
                            <i class="bi bi-tools"></i>
                        }
                    </div>
                    <h5 class="skill-title text-info mb-3">@cat.Key</h5>
                    <div class="skill-tags">
                        @foreach (var skill in cat.Value)
                        {
                            <span class="skill-tag">@skill</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- 4️⃣ Experience -->
<section id="experience" class="container section py-5 animate-fade-up delay-2">
    <h2 class="section-title">Experience</h2>
    <div class="experience-grid">
        @for (int idx = 0; idx < Companies.Count; idx++)
        {
            var company = Companies[idx];
            var zigzagClass = idx % 2 == 0 ? "zigzag-left" : "zigzag-right";
            <div class="experience-company glass-card exp-card-@idx @zigzagClass">
                <div class="company-header">
                    <div class="company-info">
                        <h4 class="company-name">@company.Name</h4>
                        <p class="company-location"><i class="bi bi-geo-alt me-1"></i>@company.Location</p>
                        <p class="company-duration"><i class="bi bi-calendar3 me-1"></i>@company.TotalDuration</p>
                    </div>
                    <div class="company-logo-img">
                        <img src="images/@(company.Logo)" alt="@company.Name" />
                    </div>
                </div>
                <div class="roles-timeline">
                    @foreach (var role in company.Roles)
                    {
                        <div class="role-item">
                            <div class="role-marker"></div>
                            <div class="role-content">
                                <h5 class="role-title">@role.Title</h5>
                                <p class="role-period"><i class="bi bi-clock me-1"></i>@role.Period <span class="role-length">• @role.Length</span></p>
                                <div class="role-tech">
                                    @foreach (var tech in role.Technologies)
                                    {
                                        <span class="tech-badge">@tech</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</section>

<!-- 5️⃣ Projects -->
<section id="projects" class="container section py-5 animate-fade-up delay-3">
    <h2 class="section-title">Projects</h2>

    <!-- Professional Projects -->
    <div class="projects-subsection mb-5">
        <h4 class="subsection-title"><i class="bi bi-briefcase me-2"></i>Professional Projects</h4>
        <p class="subsection-desc text-secondary mb-4">Company projects with limited public details due to confidentiality.</p>
        <div class="pro-projects-grid">
            @foreach (var p in ProProjects)
            {
                <div class="pro-project-card">
                    <div>
                        <i class="bi bi-lock-fill"></i>
                    </div>
                    <h6 class="academic-title">@p.Title</h6>
                    <div class="academic-tech">
                        @foreach (var tech in p.Tech.Split(", "))
                        {
                            <span class="tech-badge-sm">@tech</span>
                        }
                    </div>
                    <p class="pro-project-desc">@p.Desc</p>
                </div>
            }
        </div>
    </div>

</section>

<!-- Academic Projects New Section -->
<section id="academic-new" class="container py-3">
    <div class="projects-subsection">
        <h4 class="subsection-title"><i class="bi bi-mortarboard me-2"></i>Academic & Personal Projects</h4>
        <p class="subsection-desc text-secondary mb-4">Open-source projects built during university and personal learning journey.</p>
        <div class="academic-projects-grid">
            @foreach (var p in Academics)
            {
                <div class="academic-card glass-card">
                    <div class="academic-card-header">
                        <div class="academic-links">
                            @if (!string.IsNullOrEmpty(p.Github))
                            {
                                <a href="@p.Github" target="_blank" title="View on GitHub"><i class="bi bi-github"></i></a>
                            }
                            @if (!string.IsNullOrEmpty(p.Live))
                            {
                                <a href="@p.Live" target="_blank" title="Live Demo"><i class="bi bi-box-arrow-up-right"></i></a>
                            }
                        </div>
                    </div>
                    <h5 class="academic-title">@p.Title</h5>
                    <p class="academic-desc">@p.Desc</p>
                    <div class="academic-tech">
                        @foreach (var tech in p.Tech.Split(", "))
                        {
                            <span class="tech-badge-sm">@tech</span>
                        }
                    </div>
                    @if (p.Features.Length > 0)
                    {
                        <ul class="academic-features">
                            @foreach (var f in p.Features)
                            {
                                <li>@f</li>
                            }
                        </ul>
                    }
                </div>
            }
        </div>
    </div>
</section>

